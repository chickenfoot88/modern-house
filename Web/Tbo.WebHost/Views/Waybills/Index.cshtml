@model List<Domain.Registries.Waybills.Models.WaybillGetModel>
@{
  ViewBag.Title = "Маршрутные листы";
}
<div class="wrapper">
  @Html.Partial("_HeaderPatial")

  @Html.Partial("_SidebarPartial")
  <div class="content-wrapper">
    <section class="content-header">
      <h1>Реестр маршрутных листов</h1>
    </section>
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary date-filter">
            <div class="box-header with-border">
              @Html.ActionLink("Добавить маршрут", "Create", new { }, new { @class = "btn btn-primary create-button", type = "button" })
            </div>
            <div class="box-body">
              <table class="table table-hover table-bordered data-table">
                <thead>
                    <tr>
                        <th style="display:none;">№</th>
                        <th class="date">Дата</th>
                        <th>Автомобиль</th>
                        <th class="edit-cell edit-cell-3"></th>
                    </tr>
                </thead>
                <tbody>
                  @foreach (var dto in Model)
                  {
                    <tr>
                        <td style="display:none;">@dto.Id</td>
                        <td>@dto.WaybillDate</td>
                        <td>@(dto.Car?.Name ?? "-")</td>
                        <td class="edit-cell edit-cell-3">
                            <a class="btn btn-warning" href="@Url.Action("Edit", "WayBills", new {id = dto.Id})">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <button href="@Url.Action("Delete", new { id = dto.Id })" elementId="@dto.Id" id="waybillDelete" class="btn btn-danger delete-button">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>

  </div>
  <footer class="main-footer"></footer>
</div>

<div class="modal fade modal-window" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-small" id="dialogContent">
  </div>
</div>
