@model Tbo.WebHost.Models.Registries.Waybills.WaybillsRequestsEditWindowModel<Domain.Registries.Waybills.Models.WaybillRequestSaveModel>
@{
    Layout = null;
}
@using (Ajax.BeginForm("Create", "Waybills", FormMethod.Post, new AjaxOptions { HttpMethod = "POST" }, new { @class = "modal-content" }))
{
    @Html.HiddenFor(x => x.Data.WaybillId)
    <div class="modal-header">
        <h4 class="modal-title" id="exampleModalLabel">Добавление заявки</h4>
    </div>

    <div class="modal-body">

        <div class="row">

            <div class="col-md-12">

                <div class="form-group">
                    @Html.LabelFor(x => x.Data.OrdinalNumber, "Приоритет")
                    @Html.TextBoxFor(x => x.Data.OrdinalNumber, new { @class = "form-control", id = "claim-priority" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(x => x.Data.RequestId, "Заявка")
                    @Html.DropDownListFor(x => x.Data.RequestId, Model.Stores.Requests, new { @class = "select form-control", id = "claim-address" })
                </div>

            </div>

        </div>

    </div>

    <div class="modal-footer">
        <input type="submit" class="btn btn-success" value="Добавить">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
    </div>
}