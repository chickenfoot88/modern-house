@model Domain.Dictionary.Polygons.Models.PolygonSaveModel
@{
  Layout = null;
}
@using (Ajax.BeginForm("Create", "Polygons", FormMethod.Post, new AjaxOptions { HttpMethod = "POST" }, new { @class = "modal-content" }))
{
    @Html.HiddenFor(x => x.PositionLatitude, new { id = "polygonLatitude", @class = "markerLatitude"})
    @Html.HiddenFor(x => x.PositionLongitude, new { id = "polygonLongitude", @class = "markerLongitude"})
  <div class="modal-header">
    <h4 class="modal-title" id="exampleModalLabel">Добавление полигона</h4>
  </div>
  <div class="modal-body">

    <div class="row">

      <div class="col-md-6">
        <div class="row">

          <div class="col-md-12">
            <div class="form-group">
              @Html.LabelFor(x => x.Name, "Наименование")
              @Html.TextBoxFor(x => x.Name, new { @class = "form-control", id = "customerName", placeholder = "Введите наименование полигона", required = "required" })
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              @Html.LabelFor(x => x.Address, "Адрес")
              @Html.TextBoxFor(x => x.Address, new { @class = "form-control marker-address", id = "polygon-address", placeholder = "Введите адрес полигона", required = "required" })
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              @Html.LabelFor(x => x.Phone, "Телефон")
              @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control-tel", id = "customerPhone", placeholder = "+7(___) __-__-__"})
            </div>
          </div>

          <div class="col-md-12">
            <div class="form-group">
              @Html.LabelFor(x => x.Description, "Описание")
              @Html.TextAreaFor(x => x.Description, new { @class = "form-control", id = "customerPhone", placeholder = "Введите описание..." })
            </div>
          </div>

        </div>
      </div>

      <div class="col-md-6">
        <div id="polygon-map" class="map-container"></div>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <input type="submit" class="btn btn-success" value="Добавить" />
    <button type="button" class="btn btn-secondary cancel-btn" data-dismiss="modal">Отмена</button>
  </div>
}
