@model List<Domain.Dictionary.Drivers.Models.DriverGetModel>

@{
  ViewBag.Title = "Водители";
}

<div class="wrapper">

  @Html.Partial("_HeaderPatial")

  @Html.Partial("_SidebarPartial")

  <div class="content-wrapper">

    <section class="content-header">
      <h1>Реестр водителей</h1>
    </section>

    <section class="content fixed">
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary">
            <div class="box-header with-border">
              @Html.ActionLink("Добавить водителя", "Create", new { }, new { @class = "btn btn-primary create-button", type = "button" })
            </div>
            <div class="box-body">
              <table class="table table-hover table-bordered data-table">
                <thead>
                  <tr>
                    <th class="order-cell">Номер</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>ФИО для отображения</th>
                    <th>Телефон</th>
                    <th>Водительское удостоверение</th>
                    <th class="edit-cell-2"></th>
                  </tr>
                </thead>
                <tbody>
                  @foreach (var dto in Model)
                  {
                    <tr>
                      <td class="order-cell">@dto.Id</td>
                      <td>@dto.LastName</td>
                      <td>@dto.FirstName</td>
                      <td>@dto.Patronymic</td>
                      <td>@dto.Name</td>
                      <td>@dto.PhoneNumber</td>
                      <td>@(dto.DriverLicenceNumber ?? "-")</td>
                      <td class="edit-cell edit-cell-2">
                        <button href="@Url.Action("Edit", new { id = dto.Id })" elementId="@dto.Id" class="btn btn-warning edit-button">
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                        <button href="@Url.Action("Delete", new { id = dto.Id })" elementId="@dto.Id" id="driverDelete" class="btn btn-danger delete-button">
                          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                      </td>
                    </tr>
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <footer class="main-footer"></footer>

</div>

<div class="modal fade modal-window" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" id="dialogContent">
  </div>
</div>
