@model Domain.Dictionary.ContainerTypes.Models.ContainerTypeSaveModel

@{
    Layout = null;
}

@using (Ajax.BeginForm("Create", "ContainerTypes", FormMethod.Post, new AjaxOptions { HttpMethod = "POST" },  new { @class = "modal-content"}))
{
  <div class="modal-header">
    <h4 class="modal-title" id="exampleModalLabel">Добавление типа контейнера</h4>
  </div>
  <div class="modal-body">
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          @Html.LabelFor(x => x.Name, "Название")
          @Html.TextBoxFor(x => x.Name, new { @class= "form-control", id = "containerTypeName", placeholder = "Введите название", required = "required" })
        </div>
        <div class="form-group">
          @Html.LabelFor(x => x.Capacity, "Емкость")
          @Html.TextBoxFor(x => x.Capacity, new { @class = "form-control", id = "containerTypeCapacity", placeholder = "Введите емкость", required = "required" })
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <input type="submit" class="btn btn-success" value="Добавить">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
  </div>
}
