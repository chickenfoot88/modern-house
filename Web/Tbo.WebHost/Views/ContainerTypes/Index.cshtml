@using System.Globalization
@model List<Domain.Dictionary.ContainerTypes.Models.ContainerTypeGetModel>
@{
    ViewBag.Title = "Типы контейнеров";
}
<div class="wrapper">
  @Html.Partial("_HeaderPatial")
  @Html.Partial("_SidebarPartial")

  <div class="content-wrapper">
    <section class="content-header">
      <h1>Реестр типов контейнеров</h1>
    </section>
    <section class="content fixed">
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary">
              <div class="box-header with-border">
                @Html.ActionLink("Добавить тип контейнера", "Create", new { }, new { @class = "btn btn-primary create-button", type = "button" })
                <a href="@Url.Action("Index","Containers")" class = "btn btn-success">Все контейнеры</a>
              </div>
            <div class="box-body">
              <table class="table table-hover table-bordered data-table">
                <thead>
                  <tr>
                    <th class="order-cell">Номер</th>
                    <th>Название</th>
                    <th>Емкость</th>
                    <th class="edit-cell edit-cell-2"></th>
                  </tr>
                </thead>
                <tbody>
                  @foreach (var dto in Model)
                  {
                    <tr>
                      <td class="order-cell" class="order-cell">@dto.Id</td>
                      <td>@dto.Name</td>
                      <td>@dto.Capacity</td>
                      <td class="edit-cell edit-cell-2">
                        <button href="@Url.Action("Edit", new { id = dto.Id })" class="btn btn-warning edit-button" elementId="@dto.Id">
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                        <button href="@Url.Action("Delete", new { id = dto.Id })" elementId="@dto.Id" id="containerTypeDelete" class="btn btn-danger delete-button">
                          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                      </td>
                    </tr>
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>

  </div>
  <footer class="main-footer"></footer>
</div>

<div class="modal fade modal-window" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-small" id="dialogContent">
  </div>
</div>
