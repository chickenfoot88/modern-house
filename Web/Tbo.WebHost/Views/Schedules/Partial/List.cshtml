@model System.Collections.Generic.List<Domain.Registries.Schedules.Models.ScheduleGetModel>
@{
    Layout = null;
}
<div class="row">
  <div class="col-md-12">
    <div class="box box-primary date-filter">
      <div class="box-header with-border">
        @Html.ActionLink("Добавить запись графика работ", "Create", new { }, new { @class = "btn btn-primary create-button", type = "button" })
      </div>
      <div class="box-body">
        <table class="table table-hover table-bordered data-table">
          <thead>
            <tr>
              <th>Дата</th>
              <th>Автомобиль</th>
              <th>Водитель</th>
              <th class="edit-cell edit-cell-3"></th>
            </tr>
          </thead>
          <tbody>
            @foreach (var dto in Model)
            {
              <tr>
                <td>@dto.DateStr</td>
                <td>@(dto.Car.Number ?? "-")</td>
                <td>@(dto.Driver.Name ?? "-")</td>
                <td class="edit-cell edit-cell-3">
                  <button href="@Url.Action("Edit", new { id = dto.Id })" elementId ="@dto.Id" id="editSchedule" class="btn btn-warning edit-button">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </button>
                  <button href="@Url.Action("Delete", new { id = dto.Id })" elementId="@dto.Id" id="scheduleDelete" class="btn btn-danger delete-button">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                  </button>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
